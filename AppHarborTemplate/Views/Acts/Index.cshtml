@model IEnumerable<AppHarborTemplate.Models.Act>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Timestamp
        </th>
        <th>
            Deed
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@String.Format("{0:g}", item.DateClaimed)
        </td>
        <td>
			@(item.Deed == null ? "None" : item.Deed.Name)
        </td>
    </tr>
}

</table>


