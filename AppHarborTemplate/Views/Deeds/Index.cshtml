@model IEnumerable<AppHarborTemplate.Models.Deed>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Person
        </th>
        <th>
            Acts
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@(item.Person == null ? "None" : item.Person.Name)
        </td>
        <td>
			@(item.Acts == null ? "None" : item.Acts.Count.ToString())
        </td>
    </tr>
}

</table>


