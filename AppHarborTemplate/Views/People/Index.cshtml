@model IEnumerable<AppHarborTemplate.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Couple
        </th>
        <th>
            Deeds
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@(item.Couple == null ? "None" : item.Couple.Name)
        </td>
        <td>
			@(item.Deeds == null ? "None" : item.Deeds.Count.ToString())
        </td>
    </tr>
}

</table>


