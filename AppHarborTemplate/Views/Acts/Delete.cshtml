@model AppHarborTemplate.Models.Act

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Act</legend>

    <div class="display-label">Timestamp</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateClaimed)</div>

    <div class="display-label">Deed</div>
    <div class="display-field">@(Model.Deed == null ? "None" : Model.Deed.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


