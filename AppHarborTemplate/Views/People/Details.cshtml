@model AppHarborTemplate.Models.Person

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Person</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Couple</div>
    <div class="display-field">@(Model.Couple == null ? "None" : Model.Couple.Name)</div>

    <div class="display-label">Deeds</div>
    <div class="display-field">@(Model.Deeds == null ? "None" : Model.Deeds.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


